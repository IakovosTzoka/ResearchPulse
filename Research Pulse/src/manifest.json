{
  "manifest_version": 2,
  "name": "Research Pulse",
  "version": "1.1",
  "description": "Redirects Shorts, Reels, and TikToks to research.",
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "https://*.instagram.com/*",
    "https://*.youtube.com/*",
    "https://*.facebook.com/*",
    "https://*.tiktok.com/*",
    "https://*.arxiv.org/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.instagram.com/*",
        "*://*.youtube.com/*",
        "*://*.facebook.com/*",
        "*://*.tiktok.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "focusfinder@researchpulse.addon"
    }
  }
}